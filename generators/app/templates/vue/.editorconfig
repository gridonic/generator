[*.{js,jsx,ts,tsx,vue}]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.{json,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

# Custom rules for PhpStorm to better work with automatic code insertion
ij_typescript_use_double_quotes = false
